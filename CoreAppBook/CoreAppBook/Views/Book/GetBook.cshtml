@model CoreAppBook.Models.BookModel;
@{
    ViewData["Title"] = "GetBook";

}

<div class="container">
    <h3>Books Details</h3>
    <div class="row">
        <div class="col-md-6">

            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/logo.jpg" class="d-block w-100" alt="..." width="100%" height="100%">
                    </div>
                    <div class="carousel-item">
                        <img src="..." class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="..." class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Html.DisplayFor(x=>x.Title)</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span>By @Html.DisplayFor(x => x.Author)</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="text-muted">@Html.DisplayFor(x => x.Description)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-primary" href="#">Read Now</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group">
                        <li class="list-group-item"><span class="font-weight-bold">Category-</span>@Html.DisplayFor(x => x.Category)</li>
                        <li class="list-group-item"><span class="font-weight-bold">Total Pages-</span>@Html.DisplayFor(x => x.ToTalPages)</li>
                        <li class="list-group-item"><span class="font-weight-bold">Language-</span>@Html.DisplayFor(x => x.Language)</li>

                    </ul>
                </div>
            </div>


        </div>
    </div>
</div>
<div class="py-5 bg-light">

    <div class="container">
        <h3>Similar Books</h3>
        <div class="row">
            @for(int i=0;i<5;i++)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg class="card-img-top" width="100%" height="225"></svg>
                        <div class="card-body">
                            <h3 class="card-title">@Model.Title</h3>
                            <p class="card-text">@Model.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/book/getbook/@Model.Id" class="btn btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted">@Model.Author</small>

                            </div>

                        </div>
                    </div>

                </div>

            }
        </div>

    </div>


</div>