@model CoreAppBook.Models.BookModel;
<div class="card mb-4 shadow-sm">
    @*<svg class="card-img-top" width="100%" height="225"></svg>*@
    <img src="@(Model.CoverImageUrl==null?"/images/not_available.png":Model.CoverImageUrl)" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@Model.Title</h3>
        <p class="card-text">@Model.Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="Book" asp-action="getbook" asp-route-id="@Model.Id" class="btn btn-outline-secondary">View Details</a>
            </div>
            <small class="text-muted">@Model.Author</small>
        </div>
    </div>
</div>

